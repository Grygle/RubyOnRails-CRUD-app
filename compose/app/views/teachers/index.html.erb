<p id="notice"><%= notice %></p>
<center><h1>Lista nauczycieli</h1></center>
<div class="container">


<%= form_tag(teachers_path, method: :get , id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Znajdź nauczyciela" %>
    <%= submit_tag "Szukaj", name: nil, class: "btn btn-warning btn-sm" %>
<% end %>

<% if @teachers.blank? %>
  <h4>Nie istnieje nauczyciel '<%= params[:search] %>'.</h4>
<% end %>


<center><%= link_to 'Dodaj nowego nauczyciela', new_teacher_path, :class => "btn btn-warning btn-sm" %></center>
</br>
<table class="table table-stripped table-hover">

  <thead>
    <tr>
      <th>Imię</th>
      <th>Nazwisko</th>
      <th>Pesel</th>
      <th>Przedmiot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.imie %></td>
        <td><%= teacher.nazwisko %></td>
        <td><%= teacher.pesel %></td>
        <td><%= teacher.subject.nazwa %></td>
        <td><%= link_to 'Wyświetl', teacher, :class => "btn btn-dark btn-sm" %></td>
        <td><%= link_to 'Edytuj', edit_teacher_path(teacher) , :class => "btn btn-warning btn-sm" %></td>
        
       <!--<td><%= link_to 'Usuń', teacher, method: :delete, data: { confirm: 'Czy na pewno chcesz usunąć?' }, :class => "btn btn-dark btn-sm"  %></td>-->
         <td><%= link_to 'Usuń', teachers_path , :class => "btn btn-dark btn-sm"%></td>
    <% end %>
  </tbody>
</table>
     <%= link_to 'Anuluj szukanie', teachers_path , :class => "btn btn-dark btn-sm"%>

</div>
<br>