<p id="notice"><%= notice %></p>
<center><h1>Lista uczniów</h1></center>
<div class="container">


<%= form_tag(students_path, method: :get , id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Znajdź ucznia" %>
    <%= submit_tag "Szukaj", name: nil, class: "btn btn-warning btn-sm" %>
<% end %>

<% if @students.blank? %>
  <h4>Nie istnieje uczeń '<%= params[:search] %>'.</h4>
<% end %>


<center><%= link_to 'Dodaj nowego ucznia', new_student_path, :class => "btn btn-warning btn-sm" %></center>
</br>
<table class="table table-stripped table-hover">

  <thead>
    <tr>
      <th>Imię</th>
      <th>Nazwisko</th>
      <th>Pesel</th>
      <th>Klasa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.imie %></td>
        <td><%= student.nazwisko %></td>
        <td><%= student.pesel %></td>
        <td><%= student.klasa %></td>
        <td><%= link_to 'Wyświetl', student, :class => "btn btn-dark btn-sm" %></td>
        <td><%= link_to 'Edytuj', edit_student_path(student) , :class => "btn btn-warning btn-sm" %></td>
        
       <!--<td><%= link_to 'Usuń', student, method: :delete, data: { confirm: 'Czy na pewno chcesz usunąć?' }, :class => "btn btn-dark btn-sm"  %></td>-->
         <td><%= link_to 'Usuń', students_path , :class => "btn btn-dark btn-sm"%></td>
    <% end %>
  </tbody>
</table>
     <%= link_to 'Anuluj szukanie', students_path , :class => "btn btn-dark btn-sm"%>

</div>
<br>